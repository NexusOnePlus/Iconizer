<Window x:Class="Iconizer.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Iconizer" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Name="TbHello" Text="Settings" FontSize="15" HorizontalAlignment="Center" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="80" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="Files and Extensions" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBlock Grid.Row="1" Opacity="0.8" TextWrapping="WrapWithOverflow" TextAlignment="Left" Margin="10"
                           FontWeight="Light" FontSize="13">
                    Names of files and extensions which parent folder icon will be changed with its corresponding Icon defined in the other column.
                    Example: *.cpp, *.tsx, package.json, config.toml
                </TextBlock>
                <ScrollViewer Grid.Row="2">
                    <StackPanel>
                        <StackPanel Name="FilesPanel" Margin="10"></StackPanel>
                        <Button Name="AddFile" Click="AddFile_OnClick" HorizontalAlignment="Center" Content="Add more" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="80" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="Icons Paths" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBlock Grid.Row="1" Opacity="0.8" TextWrapping="WrapWithOverflow" TextAlignment="Left" Margin="10"
                           FontSize="13" FontWeight="Light">
                    Icon Files Path that will be apply to the corresponding extensions. Format: .ico
                </TextBlock>
                <ScrollViewer Grid.Row="2">

                    <StackPanel>
                        <StackPanel Name="InputsPanel" Margin="10"></StackPanel>
                        <Button Name="AddButton" HorizontalAlignment="Center" Click="AddButton_OnClick"
                                Content="Add more" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        <Button Grid.Row="2" Name="BtButton" Width="70" Height="30" VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Content="Save" FontSize="15" Click="BtButton_OnClick" />
    </Grid>
</Window>